@using DatingProj.Internationalization
@model IEnumerable<DatingProj.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>@AppResources.Profiles</h2>

@using (@Html.BeginForm("Index", "Users", FormMethod.Get))
{
    <p>
        @AppResources.SearchProfiles:
        @Html.TextBox("searchString")
        <input type="submit" value="@AppResources.Search" class="btn btn-default" /> |
        @Html.ActionLink(AppResources.Goback, "Index")
    </p>
}
<table class="table">
    <tr>

        <th>
            <h3>@AppResources.Name</h3>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>

            <td>
                <img src="data:image;base64,@Convert.ToBase64String(item.UserPhoto)" style="width:200px;height:200px; background: #FFFFFF;
                            margin: auto;
                            margin-right: 15px;
                            -moz-border-radius: 60px;
                            border-radius: 100px;
                            padding: 6px;
                            box-shadow: 0px 0px 20px #888;" />
                @Html.DisplayFor(modelItem => item.Name) : @Html.ActionLink(AppResources.Goto, "UserProfil", "Users", new { id = item.Id }, new { })

            </td>
        </tr>
    }

</table>